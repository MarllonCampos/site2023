---
const {
  logo,
  company,
  url,
  kind,
} = Astro.props;
---

<a class={`support-item support-item--${kind}`} href={url} target="_blank">
  <img class="support-logo" src={logo} alt={company} />
</a>

<style lang="scss">
  .support-item {
    text-decoration: none;
    border: 0;
    display: flex;
    height: 100%;
    align-items: center;
    justify-content: center;
    background-color: var(--color-secondary);
    margin: 0 auto;

    img {
      max-height: 100%;
    }
  }

  .support-item--sponsor {
    min-height: 50px;

    @media (min-width: 768px) {
      min-height: 100px;
    }
  }

  .support-item--support {
    height: 80px;

    @media (min-width: 400px) {
      min-height: 100px;
    }
  }

  .support-item--sponsor,
  .support-item--support {
    background: var(--color-secondary);
    padding: 2rem 1rem;
    border: 2px solid var(--color-text);

    @media (min-width: 768px) {
      padding: 1rem 2rem;
    }
  }
</style>
